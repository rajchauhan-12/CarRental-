pipeline {
    agent {
        label 'docker-agent' // Matches the label you set in Docker template
    }
    
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'maven:3.8.6-jdk-11' // Example for Java
                    args '-v $HOME/.m2:/root/.m2' // Cache Maven repo
                    reuseNode true
                }
            }
            steps {
                sh 'mvn clean package'
            }
        }
    }
}
