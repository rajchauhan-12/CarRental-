pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/rajchauhan-12/compose.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('compose-app')
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    sh 'docker run -d -p 3000:3000 compose-app'
                }
            }
        }
    }
}
