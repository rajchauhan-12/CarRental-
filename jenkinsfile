pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/rajchauhan-12/CarRental-'
            }
        }

        stage('Start Docker Compose') {
            steps {
                script {
                    echo 'üõ†Ô∏è Starting services using docker-compose...'
                    sh 'docker-compose down || true'  // Stop any existing containers
                    sh 'docker-compose up -d'
                }
            }
        }

        stage('Verify Containers') {
            steps {
                echo 'üîç Verifying running containers...'
                sh 'docker ps'
            }
        }
    }

    post {
        success {
            echo '‚úÖ WordPress app deployed successfully on http://localhost:8000'
        }
        failure {
            echo '‚ùå Something went wrong during deployment.'
        }
    }
}
