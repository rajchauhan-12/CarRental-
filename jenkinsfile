pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm  // Only one checkout needed
            }
        }

        stage('Build') {
            steps {
                script {
                    // Use bat for Windows, proper path formatting
                    docker.image('maven:3.8.6-jdk-11').inside('-v C:\\Users\\rajch\\.m2:/root/.m2') {
                        bat 'mvn clean package'  // Use bat instead of sh for Windows
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            script {
                bat 'docker rmi maven:3.8.6-jdk-11 || exit 0'  // Cleanup image
            }
        }
    }
}
